{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node", "cucumber"]
  },
  "include": ["Src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}